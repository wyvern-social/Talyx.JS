@meta {
    locale       = "en-US"
    plural_rules = "cardinal"
    direction    = "ltr"
}

# Simple messages
greeting = "Hello!"
farewell = "Goodbye!"
welcome_message = "Welcome, {username}!"

# plural messages
apples = plural(count) {
    one: "You have 1 apple."
    other: "You have {count} apples."
}

status_message = -> {
    [online] "Online"
    [offline] "Offline"
    [idle] "Idle"
    *[other] "Unknown status"
}